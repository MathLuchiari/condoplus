                </div>
                </div>

                <div class="col">
                    <!-- Simple link -->
                    <a href="#!">Esqueceu a senha?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block"> Entrar </button>
        </div>
    </div>
