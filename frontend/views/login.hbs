<section class="login">
    <div class="login__form">
        <label class="login__form--title display-2"> Condo+ </label>

        <div class="container-fluid">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" id="txtLogin" class="form-control" />
                <label class="form-label" for="txtLogin">Email ou usu√°rio</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <i id="showPassword" class="far fa-eye-slash trailing form_input--icon-eye form_input--icon-eye--active"></i>
                <input type="password" id="txtPassword" class="form-control" />
